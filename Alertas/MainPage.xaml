<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alertas.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="canal.png"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Button x:Name="DisplayAlert" Text="DisplayAlert" Clicked="DisplayAlert_Clicked"/>
            <Button x:Name="DisplayPrompt" Text="DisplayPrompt" Clicked="DisplayPrompt_Clicked"/>
            <Button x:Name="PopUp" Text="PopUp" Clicked="PopUp_Clicked"/>





        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
